<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <LangVersion>preview</LangVersion>
        <Title>Core architecture patterns</Title>
        <Authors>CODED by Jim</Authors>
        <Description>Core architecture patterns for API's.</Description>
        <PackageProjectUrl>https://github.com/CodedByJim/Coded.Core</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/CodedByJim/Coded.Core/blob/main/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/CodedByJim/Coded.Core</RepositoryUrl>
        <RepositoryType>Git</RepositoryType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>Coded.Core.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>Coded.Core.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Dapper" Version="2.0.35" />
      <PackageReference Include="Microsoft.Extensions.Caching.Abstractions" Version="3.1.8" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="3.1.8" />
      <PackageReference Include="SimpleInjector" Version="5.0.3" />
      <PackageReference Include="System.Configuration.Abstractions" Version="2.0.2.45" />
    </ItemGroup>

</Project>
